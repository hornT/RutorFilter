{
 "manifest_version": 2,
 "name": "RutorFilter",
 "version": "1.0.30",
 "description": "Filter films",

 "permissions": [
        "tabs",
		//"activeTab",
        "http://*/*",
        "https://*/*",
        "chrome://favicon/",
        "storage"
    ],

 "browser_action": {
  "default_title": "Rutor",
  "default_icon": "images/icon.png",
  "default_popup": "popup.html"
 },

 "options_page": "options.html",
 //"background": { "page": "background.html" },
 "web_accessible_resources": [ "rutor.js" ]
}